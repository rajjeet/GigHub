<script type="text/underscore-template" id="notifications-template" >
    <ul class="notifications">
        <% _.each(notifications, function(n) {
            if (n.type == 1) { %>
            <li>
                <span class="highlight"><%= n.gig.artist.name %></span> has cancelled the gig at <%= n.gig.venue %> at <%= n.gig.dateTime %>.
            </li>
            <% } else if (n.type == 2 ) { %>
            <li>
                <span class="highlight"><%= n.gig.artist.name %></span> has changed the 
                <% if (n.originalDateTime == n.gig.dateTime && n.originalVenue != n.gig.venue) {  %>
                    venue from <%= n.originalVenue %> to <%= n.gig.venue %>.
                <% } else if (n.originalDateTime != n.gig.dateTime && n.originalVenue == n.gig.venue) { %>
                    date/time from <%= n.originalDateTime %> to <%= n.gig.dateTime %>.
                <% } else if (n.originalDateTime != n.gig.dateTime && n.originalVenue != n.gig.venue) { %>
                    date/time from <%= n.originalDateTime %> to <%= n.gig.dateTime %> 
                        and the venue from <%= n.originalVenue %> to <%= n.gig.venue %>.
                <% } %>
            </li>
            <% } else if (n.type == 3 ) { %>
            <li>
                <span class="highlight"><%= n.gig.artist.name %></span> has created a gig at <%= n.gig.venue %> on <%= n.gig.dateTime %>.
            </li>
            <% }  %>
        <% }) %>
    </ul>
    </script>
    <script>
        $(document).ready(function() {
            $.getJSON('/api/notifications',
                function (notifications) {
                    if (notifications.length === 0)
                        return;

                    $('.js-notifications-count')
                        .text(notifications.length)
                        .removeClass('hide')
                        .addClass('animated tada');

                    $('.notifications').popover({
                        html: true,
                        placement: 'bottom',
                        title: 'Notifications',
                        content: function () {
                            var compiled = _.template($('#notifications-template').html());
                            return compiled({ notifications : notifications });
                        },
                        template: '<div class="popover popover-notifications" role="tooltip"><div class="arrow"></div><h3 class="popover-title"></h3><div class="popover-content"></div></div>'
                    }).on('shown.bs.popover', function() {
                        $.ajax({
                            url: '/api/Notifications',
                            method: "PATCH"
                        }).done(function() {
                            console.log('done reading notifications');
                        }).fail(function() {
                            alert('something went wrong!');
                        });
                    });
                });
        });
    </script>
